// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "dist": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "app/**/*.js": {
            "when": "$(basename).ts"
        },
        "src/app/**/*.js": {
            "when": "$(basename).ts"
        },
        "src/app/**/*.js.map": true
    }
}